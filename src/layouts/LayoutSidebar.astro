---
import FooterSidebar from './FooterSidebar.astro';
import LayoutCommon from './LayoutCommon.astro';
import NavBarSidebar from './NavBarSidebar.astro';
import SideBar from './SideBar.astro';
import ToastContainer from '@components/ToastContainer.vue';
---

<LayoutCommon>
	<NavBarSidebar />

	<SideBar />

	<div class="flex overflow-hidden bg-gray-50 pt-16 dark:bg-gray-900">
		<div
			id="main-content"
			class="relative h-full min-h-screen w-full overflow-y-auto bg-gray-50 pt-0 dark:bg-gray-900 lg:ml-64"
		>
			<ToastContainer client:only />
			<slot />

			<FooterSidebar />
		</div>
	</div>
</LayoutCommon>
